{
  "extends": "../../tsconfig.json",
  "exclude": [
    "dist"
  ],
  "include": [
    "*.ts",
    "src",
    "build/routes.ts",
    "build/swagger.json"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": false,
    "types": [
      "node",
      "tsoa"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "experimentalDecorators": true,
    "rootDir": "./",
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "declarationDir": "./build/type",
    "composite": true
  }
}
